                                   HorizontalAlignment="Left"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource PlaceholderManager}}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
