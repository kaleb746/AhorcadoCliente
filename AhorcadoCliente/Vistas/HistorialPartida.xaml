<Window x:Class="AhorcadoCliente.Vistas.HistorialPartida"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RankingJugadores" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" Text="Historial de Partidas"
                   FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"
                   Foreground="{StaticResource PrimaryBrush}"/>

        <!-- DataGrid -->
        <DataGrid x:Name="PartidasDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Style="{DynamicResource DataGridStyle1}"
                  RowStyle="{DynamicResource DataGridRowStyle1}"
                  CellStyle="{DynamicResource DataGridCellStyle0}"
                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle0}"
                  Grid.Row="1"
                  Margin="0,10,0,10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha"
                                    Binding="{Binding Fecha}"
                                    Width="2*"/>
                <DataGridTextColumn Header="Rival"
                                    Binding="{Binding Usuario}"
                                    Width="*"/>
                <DataGridTextColumn Header="Dificultad"
                                    Binding="{Binding Dificultad}"
                                    Width="*"/>
                <DataGridTextColumn Header="Resultado"
                                    Binding="{Binding Resultado}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2"
                Content="Regresar"
                Click="btnClicRegresar"
                Style="{StaticResource SecondaryButtonNoIconStyle}"
                HorizontalAlignment="Left"
                MinWidth="100"
                Margin="0,20,0,0" Height="34" VerticalAlignment="Top"/>
    </Grid>
</Window>