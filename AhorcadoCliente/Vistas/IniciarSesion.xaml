<Window x:Class="AhorcadoCliente.Vistas.IniciarSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        MinWidth="300"
        MinHeight="400"
        Background="#f0f2f5"
        WindowStartupLocation="CenterScreen">
    
    <Grid Background="White" Margin="20">
        <Grid x:Name="IniciarSesionPanel"
              Margin="20" 
              Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Encabezado -->
            <StackPanel Grid.Row="0" Margin="0,10,0,20" HorizontalAlignment="Center">
                <TextBlock Text="Bienvenido" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" TextAlignment="Center"/>
                <TextBlock Text="Inicia sesión para continuar" FontSize="14" Foreground="Gray" TextAlignment="Center"/>
            </StackPanel>

            <!-- Contenido -->
            <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" MinWidth="280" Margin="0,0,0,20">
                <TextBox
                        x:Name="TbUsuario"
                         Tag="Usuario" Margin="0,0,0,15"
                         Style="{DynamicResource TextBoxStyle}"/>

                <PasswordBox 
                             x:Name="PbPassword"
                             Tag="Contraseña" Margin="0,0,0,25"
                             Style="{DynamicResource PasswordBoxStyle}"/>
                <Button x:Name="clicIniciarSesion"
                        Content="Iniciar Sesión"
                        Style="{StaticResource PrimaryButtonNoIconStyle}"
                        Height="40" Margin="0,0,0,10"
                        Click="btnClicIniciarSesion"/>

                <Button Content="¿No tienes cuenta? Regístrate"
                        Style="{StaticResource SecondaryButtonNoIconStyle}"
                        Height="40" Background="Transparent" BorderBrush="#3498db" Foreground="#3498db"
                        Click="btnClicRegistrarJugador"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>